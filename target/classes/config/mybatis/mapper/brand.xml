<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="brand"><!-- 파일마다 있는 SQL문들을 구분할 수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 
		resultType : 결과값 타입 (select문일때 주로 사용)
		parameterType : sql에 필요한 데이터들
	-->
	
	<select id="selectList" resultType="brand">
		select * from brand
	</select>
	
	<select id="selectName" resultType="String" parameterType="int">
		SELECT b.brand_name 
		FROM brand b, brand_info i 
		WHERE i.member_idx=#{member_idx} AND b.idx = i.brand_idx
	</select>
	
	<select id="selectOne" resultType="brand" parameterType="int">
		SELECT * 
		FROM brand b, brand_info i 
		WHERE i.member_idx=#{member_idx} AND b.idx = i.brand_idx
	</select>
	
	<insert id="insert" parameterType="brand">
		insert into brand values(#{idx},#{brand_name},#{homepage},#{serial_num})
	</insert>
	
	<update id="update" parameterType="brand">
		update brand set brand_name=#{brand_name},homepage=#{homepage}, serial_num=#{serial_num} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete brand where idx=#{idx}
	</delete>
	
	<select id="getIdx" resultType="int">
		select brand_seq.nextval from dual
	</select>

</mapper>













