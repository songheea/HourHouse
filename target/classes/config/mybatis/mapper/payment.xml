<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="payment"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="payment">
		select * from payment
	</select>
	
	<select id="selectOne" resultType="java.util.HashMap" parameterType="int">
		select * from payment where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="payment">
		insert into payment values(payment_seq.nextval,#{order_idx},#{total},#{delivery_charge},#{point},#{coupon_idx},#{payment_amount},#{payment_method})
	</insert>

	<update id="update" parameterType="payment">
		update payment set order_idx=#{order_idx},total=#{total},delivery_charge=#{delivery_charge},point=#{point},coupon=#{coupon_idx},payment_amount=#{payment_amount},payment_method=#{payment_method} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete payment where idx=#{idx}
	</delete>

</mapper>
