<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="comment"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="comment">
		select * from comment
	</select>
	
	<select id="selectOne" resultType="java.util.HashMap" parameterType="int">
		select * from comment where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="comment">
		insert into comment values(comment_seq.nextval,#{post_idx},#{orderNo},#{depth})
	</insert>
	
	<update id="update" parameterType="comment">
		update comment set post_idx=#{post_idx},orderNo=#{orderNo},depth=#{depth} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete comment where idx=#{idx}
	</delete>

</mapper>








































