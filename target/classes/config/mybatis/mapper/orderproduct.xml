<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orderProduct"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="orderProduct">
		select * from orderProduct
	</select>
	
	<select id="selectOne" resultType="java.util.HashMap" parameterType="int">
		select * from orderProduct where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="orderProduct">
		insert into orderProduct values(order_product_seq.nextval,#{order_idx},#{product_idx},#{option_idx},#{count})
	</insert>
	
	<update id="update" parameterType="orderProduct">
		update orderProduct set order_idx=#{order_idx},product_idx=#{product_idx},option_idx=#{option_idx},count=#{count}s where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete orderProduct where idx=#{idx}
	</delete>

</mapper>
