<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cart"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="cart">
		select * from cart
	</select>
	
	<select id="selectOne" resultType="java.util.HashMap" parameterType="int">
		select * from cart where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="cart" >
		insert into cart values(cart_seq.nextval,#{member_idx},#{product_idx},#{brand_idx},#{option_idx},#{count},#{product_cost},#{delivery_cost},#{product_sale})
	</insert>
	
	<update id="update" parameterType="cart">
		update cart set member_idx=#{member_idx},product_idx=#{product_idx},brand_idx=#{brand_idx},option_idx=#{option_idx},count=#{count},product=#{product_cost},delivery_cost=#{delivery_cost},product_sale=#{product_sale} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete cart where idx=#{idx}
	</delete>

</mapper>
