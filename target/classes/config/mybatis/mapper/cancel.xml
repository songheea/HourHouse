<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cancel"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="cancel">
		select * from cancel
	</select>
	
	<select id="selectOne" resultType="java.util.HashMap" parameterType="int">
		select * from cancel where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="cancel">
		insert into cancel values(cancel_seq.nextval,#{kind})
	</insert>
	
	<update id="update" parameterType="cancel">
		update cancel set kind=#{kind} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete cancel where idx=#{idx}
	</delete>

</mapper>
