<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post_categroy"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="post_categroy">
		select * from post_categroy
	</select>
	
	<select id="selectOne" resultType="post_categroy" parameterType="int">
		select * from post_categroy where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="post_categroy">
		insert into post_categroy values(post_categroy_seq.nextval,#{post_idx},#{categroy_idx})
	</insert>
	
	<update id="update" parameterType="post_categroy">
		update post_categroy set post_idx=#{post_idx},categroy_idx=#{categroy_idx} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete post_categroy where idx=#{idx}
	</delete>

</mapper>








































