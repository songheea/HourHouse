<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "HTTP://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="cacheEnabled" value="false" />
		<setting name="useGeneratedKeys" value="true" />
		<setting name="defaultExecutorType" value="REUSE" />
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	
	<typeAliases>
		<typeAlias type="vo.member.MemberVO" alias="member"/>
		<typeAlias type="vo.follow.FollowVO" alias="follow"/>
		<typeAlias type="vo.product.ProductVO" alias="product"/>
		<typeAlias type="vo.majorcategory.MajorCategoryVO" alias="majorcategory"/>
		<typeAlias type="vo.middlecategory.MiddleCategoryVO" alias="middlecategory"/>
		<typeAlias type="vo.smallcategory.SmallCategoryVO" alias="smallcategory"/>
		<typeAlias type="vo.scrap.ScrapVO" alias="scrap"/>
		<typeAlias type="vo.likes.LikesVO" alias="likes"/>
		<typeAlias type="vo.post.PostVO" alias="post"/>
		<typeAlias type="vo.brand.BrandVO" alias="brand"/>
		<typeAlias type="vo.brandinfo.BrandInfoVO" alias="brandinfo"/>
		<typeAlias type="vo.brandproduct.BrandProductVO" alias="brandproduct"/>
		<typeAlias type="vo.productcategory.ProductcategoryVO" alias="productcategory"/>
		<typeAlias type="vo.brandcategory.BrandCategoryVO" alias="brandcategory"/>
		<typeAlias type="vo.options.OptionsVO" alias="options"/>
	</typeAliases>
	
	<mappers>
		<mapper resource="config/mybatis/mapper/member.xml" />
		<mapper resource="config/mybatis/mapper/follow.xml" />
		<mapper resource="config/mybatis/mapper/product.xml" />
		<mapper resource="config/mybatis/mapper/majorcategory.xml" />
		<mapper resource="config/mybatis/mapper/middlecategory.xml" />
		<mapper resource="config/mybatis/mapper/smallcategory.xml" />
		<mapper resource="config/mybatis/mapper/scrap.xml" />
		<mapper resource="config/mybatis/mapper/likes.xml" />
		<mapper resource="config/mybatis/mapper/post.xml" />
		<mapper resource="config/mybatis/mapper/brand.xml" />
		<mapper resource="config/mybatis/mapper/brandinfo.xml" />
		<mapper resource="config/mybatis/mapper/brandproduct.xml" />
		<mapper resource="config/mybatis/mapper/productcategory.xml" />
		<mapper resource="config/mybatis/mapper/brandcategory.xml" />
		<mapper resource="config/mybatis/mapper/options.xml" />
	</mappers>
</configuration>