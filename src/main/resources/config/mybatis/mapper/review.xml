<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="review">
		select * from review
	</select>
	
	<select id="selectOne" resultType="java.util.HashMap" parameterType="int">
		select * from review where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="review">
		insert into review values(review_seq.nextval,#{product_idx},#{member_idx},#{buy_date},#{score},#{intense},#{price},#{design},#{delivery},#{option_idx},#{content},#{help})
	</insert>
	
	<update id="update" parameterType="review">
		update review set product_idx=#{product_idx},member_idx=#{member_idx},buy_date=#{buy_date},score=#{score},intense=#{intense},price=#{price},design=#{design},delivery=#{delivery},option_idx=#{option_idx},content=#{content},help=#{help} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete review where idx=#{idx}
	</delete>

</mapper>
