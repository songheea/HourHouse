<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="likes">

	<select id="check" resultType="int" parameterType="map">
		select idx from likes where post_idx=#{post_idx} and member_idx=#{member_idx} 
	</select>
	
	<select id="likesMCnt" resultType="int" parameterType="int">
		select count(*) from likes where member_idx = #{idx}
	</select>
	
	<select id="likesPCnt" resultType="int" parameterType="int">
		select count(*) from likes where post_idx = #{idx}
	</select>

	<select id="selectList" resultType="likes">
		select * from likes where post_idx=#{post_idx}
	</select>
	
	<select id="selectOne" resultType="likes" parameterType="int">
		select * from likes where member_idx=#{member_idx}
	</select>

	<insert id="insert" parameterType="likes">
		insert into likes values(likes_seq.nextval,#{member_idx},#{post_idx})
	</insert>
	
	<update id="update" parameterType="likes">
		update likes set member_idx=#{member_idx},post_idx=#{post_idx} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete likes where post_idx=#{post_idx} and member_idx=#{member_idx} 
	</delete>

</mapper>






















