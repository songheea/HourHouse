<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="majorcategory"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->
	
	<select id="selectName" resultType="majorcategory" parameterType="String">
		select idx, name from major_category where kind=#{kind}
	</select>
	
	<select id="selectOne" resultType="majorcategory" parameterType="int">
		select idx, name from major_category where idx=#{idx}
	</select>
	
	
	<insert id="insert" parameterType="majorcategory">
		insert into major_category values(major_category_seq.nextval,#{name},#{kind})
	</insert>
	
	<update id="update" parameterType="majorcategory">
		update major_category set name=#{name},kind=#{kind} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		select * from major_category where idx=#{idx}
	</delete>

</mapper>








































