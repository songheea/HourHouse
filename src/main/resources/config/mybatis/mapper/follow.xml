<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="follow">

	<select id="check" resultType="int" parameterType="map">
		select idx from follow where follow_idx=#{follow_idx} and member_idx=#{member_idx} 
	</select>

	<select id="followCnt" resultType="int" parameterType="int">
		select count(*) from follow where member_idx = #{idx}
	</select>
	
	<select id="followerCnt" resultType="int" parameterType="int">
		select count(*) from follow where follow_idx = #{idx}
	</select>
	
	<insert id="insert" parameterType="follow">
		insert into follow values(follow_seq.nextval,#{member_idx},#{follow_idx})
	</insert>
	
	<update id="update" parameterType="follow">
		update follow set member_idx=#{member_idx},follow_idx=#{follow_idx} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="map">
		delete follow where follow_idx=#{follow_idx} and member_idx=#{member_idx}
	</delete>

</mapper>













