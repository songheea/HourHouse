<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="options"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="options">
		select * from options
	</select>
	
	<select id="selectOne" resultType="java.util.HashMap" parameterType="int">
		select * from options where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="options">
		insert into options values(options_seq.nextval,#{product_idx},#{name},#{count},#{price},#{remain},#{status},#{restore},#{kind})
	</insert>

	<update id="update" parameterType="options">
		update options set product_idx=#{product_idx},name=#{name},count=#{count},price=#{price},remain=#{remain},status=#{status},restore=#{restore},kind=#{kind} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete options where idx=#{idx}
	</delete>

</mapper>
