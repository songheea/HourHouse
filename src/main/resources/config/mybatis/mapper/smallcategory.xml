<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="smallcategory"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectName" resultType="smallcategory" parameterType="int">
		select * from small_category where middle_idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="smallcategory">
		insert into small_category values(small_category_seq.nextval,#{middle_idx},#{name})
	</insert>
	
	<update id="update" parameterType="smallcategory">
		update small_category set major_idx=#{middle_idx},name=#{name} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete small_category where idx=#{idx}
	</delete>

</mapper>








































