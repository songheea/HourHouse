<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="scrap">
	<select id="selectList" resultType="scrap" parameterType="int">
		select idx, member_idx, post_idx from scrap where post_idx=#{idx}
	</select>
	
	<select id="scrapMCnt" resultType="int" parameterType="int">
		select count(*) from scrap where member_idx = #{idx}
	</select>
	
	<select id="scrapPCnt" resultType="int" parameterType="int">
		select count(*) from scrap where post_idx = #{idx}
	</select>
	
	<insert id="insert" parameterType="scrap">
		insert into scrap(idx, member_idx, post_idx) values(scrap_seq.nextval,#{member_idx},#{post_idx})
	</insert>
	
	<update id="update" parameterType="scrap">
		update scrap set member_idx=#{member_idx},post_idx=#{post_idx},product_idx=#{product_idx} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="map">
		delete scrap where member_idx=#{member_idx} and post_idx=#{post_idx}
	</delete>

</mapper>












