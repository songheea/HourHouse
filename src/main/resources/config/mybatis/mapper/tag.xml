<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tag"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="tag">
		select * from tag
	</select>
	
	<select id="selectOne" resultType="tag" parameterType="int">
		select * from tag where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="tag">
		insert into tag values(tag_seq.nextval,,#{tag},#{post_idx})
	</insert>
	
	<update id="update" parameterType="tag">
		update tag set tag=#{tag},post_idx=#{post_idx} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete tag where idx=#{idx}
	</delete>

</mapper>








































