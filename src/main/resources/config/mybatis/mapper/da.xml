<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="da"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="delivery_address">
		select * from delivery_address
	</select>
	
	<select id="selectOne" resultType="delivery_address" parameterType="int">
		select * from delivery_address where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="delivery_address">
		insert into delivery_address values(delivery_address_seq,#{member_idx},#{address_name},#{name},#{phone},#{address},#{request})
	</insert>

	<update id="update" parameterType="delivery_address">
		updelivery_addresste delivery_address set member_idx=#{member_idx},address_name=#{address_name},name=#{name},phone=#{phone},address=#{address},request=#{request} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete delivery_address where idx=#{idx}
	</delete>

</mapper>
