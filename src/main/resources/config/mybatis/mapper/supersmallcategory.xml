<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="super_small_categroy"><!-- 파일 마다 있는 SQL문들을 구분할수 있는 이름 -->

	<!-- 사용할 SQL문들을 정의하는 파일 -->

	<select id="selectList" resultType="super_small_categroy">
		select * from super_small_categroy
	</select>
	
	<select id="selectOne" resultType="super_small_categroy" parameterType="int">
		select * from super_small_categroy where idx=#{idx}
	</select>
	
	<insert id="insert" parameterType="super_small_categroy">
		insert into super_small_categroy values(super_small_categroy_seq.nextval,#{small_idx},#{name})
	</insert>
	
	<update id="update" parameterType="super_small_categroy">
		update super_small_categroy set small_idx=#{small_idx},name=#{name} where idx=#{idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete super_small_categroy where idx=#{idx}
	</delete>

</mapper>








































